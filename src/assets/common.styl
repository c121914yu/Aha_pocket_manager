:root
	--font1 #303133
	--font2 #606266
	--font3 #909399
	--font3 #C0C4CC
	--boder-color1 #DCDFE6
	--boder-color2 #E4E7ED
	--blue #409EFF
	--green #67C23A
	--yellow #E6A23C
	--red #F56C6C
	--gray #909399
	--origin1 #956134
	--origin2 #f8b86b
	--shadow1 0 2px 4px rgba(0, 0, 0, 0.12), 0 0 6px rgba(0, 0, 0, 0.04)
	--shadow2 0 2px 12px 0 rgba(0, 0, 0, 0.1)
	--radius1 2px
	--radius2 4px
	--radius3 30px
*
	margin 0
	padding 0
	box-sizing border-box
	font-family 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif
	letter-spacing 0.5px
body
	min-height 100vh
	font-weight 500
	font-size 14px
	line-height 1.5
	background-color #ffffff
	color var(--font2)
/* 滚动条样式 */
::-webkit-scrollbar{
	width:10px;
	height: 7px;
}
::-webkit-scrollbar-track{
	background: rgb(239, 239, 239);
	border-radius:2px;
}
::-webkit-scrollbar-thumb{
	background-color: #bfbfbf;
	border-radius:10px;
}
::-webkit-scrollbar-thumb:hover{
	background-color: rgba(64,158,255,0.8);
}

/* 标题字体样式 */
h1
	font-weight 700
	font-size 20px
	line-height 1.7
	color var(--font1)
h2
	font-weight 700
	font-size 18px
	line-height 1.7
	color var(--font1)
h3
	font-weight 600
	font-size 16px
small
	font-size 12px
	line-height 1.3
input[type="file"]
	position absolute
	width 0
	height 0
a
	text-decoration none
	color inherit
/* 自定义样式 */
.center
	margin auto
	text-align center
.check-file
	cursor pointer
.el-icon-circle-close
	color #FFFFFF
/* 备注信息 */
.remark
	color var(--gray)
	font-size 12px
/* 全局弹窗样式 */
.popup
	z-index 10
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	background-color rgba(0,0,0,0.2)
	display flex
	align-items center
	justify-content center
	.content
		padding 10px
		border-radius var(--radius2)
		background-color #FFFFFF
		.sure
			width 50%
			